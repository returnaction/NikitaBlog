@model Category
@{
    ViewData["Title"] = "Delete";
}

<div class="container">

    <div class="row">
        <h2 class="text-primary">Are you sure you want to delete this category</h2>
    </div>

    <div class="row">
        <form asp-action="Delete" method="post">
            <input asp-for="Id" hidden />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="@Model.Title" class="control-label"></label>
                <input asp-for="@Model.Title" disabled class="form-control" />
                <span asp-validation-for="@Model.Title" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.DisplayOrder" class="control-label"></label>
                <input asp-for="@Model.DisplayOrder" disabled class="form-control" />
                <span asp-validation-for="@Model.DisplayOrder" class="text-danger"></span>
            </div>

            <div class="row justify-content-center">

                <div class="form-group col-6">
                    <button type="submit" value="Id" class="btn btn-primary"> Delete</button>
                </div>
                <div class="form-group col-6 text-end">
                    <a asp-action="Index" class="btn btn-primary">Back to List</a>
                </div>

            </div>
        </form>
    </div>
</div>
