@model Category
@{
    ViewData["Title"] = "Upsert";
}

<div class="container">

    <div class="row">
        <h2 class="text-primary">@(Model.Id != 0 ? "Update" : "Create") category</h2>
    </div>

    <hr />

    <div class="row">
        <form asp-action="Upsert" method="post">
            <input asp-for="Id" hidden />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="@Model.Title" class="control-label"></label>
                <input asp-for="@Model.Title" class="form-control" />
                <span asp-validation-for="@Model.Title" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.DisplayOrder" class="control-label"></label>
                <input asp-for="@Model.DisplayOrder" class="form-control" />
                <span asp-validation-for="@Model.DisplayOrder" class="text-danger"></span>
            </div>

            <div class="row justify-content-center">

                <div class="form-group col-6">
                    <button type="submit" class="btn btn-primary"> @(Model.Id != 0 ? "Update" : "Create")</button>
                </div>
                <div class="form-group col-6 text-end">
                    <a asp-action="Index" class="btn btn-primary">Back to List</a>
                </div>

            </div>
        </form>
    </div>

</div>

